import java.util.Scanneer;


public class Task2{
  public static void main(){
    Scanner sc = new scanner(System.in);
    int n = sc.nextInt();
    int res = 0;
    for(int i=1;i<n;i++){
      int sum = 0;
      for(int j = 1;j<=i;j++) sum+=j;
      res -=sum;
    }
    System.out.println(res);
  }
}